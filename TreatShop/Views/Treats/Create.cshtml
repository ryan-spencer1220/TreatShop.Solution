@{
  Layout = "_Layout";
}

@model TreatShop.Models.Treat

<h4 class="display-4 lh-1 mb-4">Add New Treat</h4>

<div class="col-12 col-lg-5">
@using (Html.BeginForm())
  {
    <div class="form-group">
      <p>Name</p>
      @Html.TextBoxFor(model => model.Name,
      new {required="required"})
    </div>
    <div class="form-group">
      @Html.Label("Select Flavor")
      @Html.DropDownList("FlavorId", "Please Select Flavor")
    </div>
      <input type="submit" value="Add new treat" class="btn btn-primary" />
  }
</div>

<div class="col-12 col-lg-5">
  <p>@Html.ActionLink("Show all treats", "Index")</p>
</div>