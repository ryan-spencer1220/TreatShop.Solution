@{
  Layout = "_Layout";
}

@model TreatShop.Models.Treat

<h2 class="display-4 lh-1 mb-4">Edit @Html.DisplayFor(model => model.Name)</h2>

<div class="col-12 col-lg-5">
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.TreatId)

    <div class="form-group">
      <p>Treat Name</p>
      @Html.TextBoxFor(model => model.Name,
      new {required="required"})
    </div>
    <div class="form-group">
      @Html.Label("Select Flavorr")
      @Html.DropDownList("FlavorId")
    </div>
    <input type="submit" value="Save" class="btn btn-primary"/>
  }
</div>
<br>
<div class="col-12 col-lg-5">
  <p>@Html.ActionLink("Back to list", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role="button" })</p>
</div>