@{
  Layout = "_Layout";
}

@using TreatShop.Models;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
    <section class="bg-light">
    <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center justify-content-lg-between">
            <div class="col-12 col-lg-5">
                <p class="lead fw-normal text-muted mb-5 mb-lg-0">No flavors have been added yet!</p>
            </div>
        </div>
    </div>
  </section>
} 

  @foreach(Flavor flavor in Model)
  {
  <section class="bg-light">
    <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center justify-content-lg-between">
            <div class="col-12 col-lg-5">
                <p class="lead fw-normal text-muted mb-5 mb-lg-0">@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</p>
            </div>
        </div>
    </div>
  </section>
  }

<p>@Html.ActionLink("Add Flavor", "Create", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role="button" })</p>
<p>@Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role="button" })</p>